@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">I M S</a>
    </div>
</div>
<input type="checkbox" title="Navigation menu" class="navbar-toggler" />
<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <AuthorizeView>
            <Authorized Context="auth">
                @* Admin and Manager specific menu items *@
                <AuthorizeView Roles="Admin">
                    <Authorized Context="adminAuth">
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="products" Match="NavLinkMatch.All">
                                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Manage Products
                            </NavLink>
                        </div>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="orders">
                                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> All Orders
                            </NavLink>
                        </div>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="/errors">
                                <span class="oi oi-warning"></span> Monitoring
                            </NavLink>
                        </div>

                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="/admin/settings">
                                <span class="bi bi-gear-fill" aria-hidden="true"></span> Settings
                            </NavLink>
                        </div>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="/inventory">
                                <span class="bi bi-gear-fill" aria-hidden="true"></span> Inventory
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>

                @* Customer and User specific menu items *@
                <AuthorizeView Roles="Customer,User">
                    <Authorized Context="customerAuth">
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="productlist" Match="NavLinkMatch.All">
                                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Products List
                            </NavLink>
                        </div>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="orders">
                                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> My Orders
                            </NavLink>
                        </div>
                       
                    </Authorized>
                </AuthorizeView>

                @* Supplier specific menu items *@
                <AuthorizeView Roles="Supplier">
                    <Authorized Context="supplierAuth">
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="products" Match="NavLinkMatch.All">
                                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Manage Products
                            </NavLink>
                        </div>
                        <div class="nav-item px-3">
                            <NavLink class="nav-link" href="orders">
                                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> My Orders
                            </NavLink>
                        </div>
                    </Authorized>
                </AuthorizeView>

                @* Common menu items for all authenticated users *@
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="profile">
                        <span class="bi bi-person-fill" aria-hidden="true"></span> My Profile
                    </NavLink>
                </div>


            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="register">
                        <span class="bi bi-person-plus-fill" aria-hidden="true"></span> Register
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>